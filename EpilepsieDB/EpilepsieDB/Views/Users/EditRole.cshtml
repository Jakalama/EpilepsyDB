@model EpilepsieDB.Web.View.ViewModels.Permissions

@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit User Role</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRoleConfirmed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Systemadmin</label>
                <input asp-for="IsSystemadmin" class="form-control" />
                <span asp-validation-for="IsSystemadmin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">full user</label>
                <input asp-for="IsUser" class="form-control" />
                <span asp-validation-for="IsUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">allowed to edit scans</label>
                <input asp-for="IsScanCreator" class="form-control" />
                <span asp-validation-for="IsScanCreator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">allowed to download</label>
                <input asp-for="IsScanDownloader" class="form-control" />
                <span asp-validation-for="IsScanDownloader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">allowed to view</label>
                <input asp-for="IsScanReader" class="form-control" />
                <span asp-validation-for="IsScanReader" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserID" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

        <p>Note:</p>
        <p>
            Permissions with generous rights also grant the permissions with less rights.
        </p>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
